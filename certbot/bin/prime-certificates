#!/bin/bash
# Run this from the root of the certbot directory!
docker build -t sd-certbot .
docker run --rm -it -p 80:80 --env-file ../nginx/.env -v ${PWD}/conf:/etc/letsencrypt -v ${PWD}/www:/var/www/certbot sd-certbot certonly --standalone -d $PRIMARY_HOSTNAME -d $ALTERNATIVE_HOSTNAME -m ${SSL_EMAIL} --agree-tos --no-eff-email